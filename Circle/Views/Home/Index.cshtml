@{
    Layout = "_Layout";
    ViewData["Title"] = "Home";
}
@model Circle.Models.User

<div class="shared-container">
    <div class="shared-inner">
        <h1 class="home-user">Welcome @Model.Username</h1>
        <div class="home-container">
            

            
            <div class="home-options col" style="margin-top: 70px;">
                <label class="option-title">My Diary</label>
            
                <a class="option-button" style="color: #494945;" asp-controller="Diary" asp-action="Index">
                    <i class="home-icon fa-solid fa-book"></i>
                </a>
            </div>
            
            <div class="home-options col" style="margin-top: 70px;">
                <label class="option-title">New Post</label>
                <a class="option-button" style="color: #494945;" asp-controller="Post" asp-action="Index">
                     <i class="home-icon fa-solid fa-file-circle-plus"></i>
                </a>
            </div>

        </div>
        
    </div>
    
</div>